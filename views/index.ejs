<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="/socket.io/socket.io.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="css/main.css" rel="stylesheet"></link>
    <title>Webchat</title>
  </head>
  <body>
    <section class="main">
      <aside>
        <section class="input-group mb-3">
          <input type="text" class="form-control" id="nickname-box" placeholder="username" data-testid="nickname-box" />
          <button type="button" class="btn btn-primary" id="nickname-button" data-testid="nickname-button">
            Save
          </button>
        </section>
        <section class="online-users">
          <div id="onlineUsers"></div>
        </section>
      </aside>
      <main>
        <section class="messages-box">
          <ul id="chatMessages">
            <% messages.forEach((message) => { %>
              <li class="messages" data-testid="message"><%= message %></li>
            <% }) %>
          </ul>
        </section>
        <section class="input-group mb-3">
          <input type="text" class="form-control" name="message" id="message" data-testid="message-box" placeholder="text here"/>
          <button type="submit" class="btn btn-primary" id="sendMessage" data-testid="send-button">
            Send
          </button>
        </section>
      </main>
    </section>
    <footer>developed by Luciano Scalfone</footer>

    <script src="js/main.js"></script>
  </body>
</html>